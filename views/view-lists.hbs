{{> header }}

<section id="lists-page">
    <div id="list-container" class="container">
        <h2 class="page-header">Lists</h2>
        <div id="target-location" class="row">
            <!-- Lists get appended here -->
            {{#if lists}}
                {{#each lists}}
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-block center-block">
                                <h3 class="card-title text-center">
                                    <a href="/movie-list/{{this._id}}">{{this.name}}</a>
                                </h3>
                                <i>{{this.description}}</i>
                            </div>
                        </div>
                    </div>
                {{/each}}
                    {{else}}
                    <h3 class="text-center no-content"><i>No lists available</i></h3>
                {{/if}}            
        </div>
    </div>
</section>
{{> footer }}