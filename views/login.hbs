{{> header }}

<section id="login-page">
    <div class="container">
        <h2 class="page-header">Login</h2>
        <form id="login-form" method="post" action="/login">
            <div class="form-group">
                <label class="username-label" for="login-username-input">Username</label>
                <input class="form-control" type="text" id="login-username-input" name="username" required/>
            </div>
            <div class="form-group">
                <label class="password-label" for="login-password-input">Password</label>
                <input class="form-control" type="password" id="login-password-input" name="password" required/>
            </div>
            <input type="submit" class="btn btn-sm btn-primary" value="Login" />
        </form>
    </div>
</section>

{{> footer }}